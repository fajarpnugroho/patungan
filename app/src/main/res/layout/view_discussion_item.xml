<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chat_buble"
        android:padding="16dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/medium_dark"
            android:textSize="14sp"
            tools:text="Guys, besok jadi gak ni? \nMasih ada 4 org lagi blm transfer.. :(" />
    </FrameLayout>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/thin_black"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        tools:text="You - 22/02/2016 09:00:12" />

</LinearLayout>