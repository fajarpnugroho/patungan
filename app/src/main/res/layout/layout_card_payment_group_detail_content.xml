<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:contentPaddingBottom="30dp"
    card_view:contentPaddingLeft="31dp"
    card_view:contentPaddingRight="31dp"
    card_view:contentPaddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="32sp"
            android:textColor="@color/soft_black"
            tools:ignore="UnusedAttribute"
            tools:text="nonton Bareng Kungfu Panda 3" />

        <TextView
            android:id="@+id/bucket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            tools:text="Dana terkumpul\nRp 150.000, 00" />

        <TextView
            android:id="@+id/invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Total biaya\nRp 150.000, 00" />

    </LinearLayout>
</android.support.v7.widget.CardView>
