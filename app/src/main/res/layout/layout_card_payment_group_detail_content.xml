<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2dp"
    card_view:contentPaddingBottom="30dp"
    card_view:contentPaddingLeft="31dp"
    card_view:contentPaddingRight="31dp"
    card_view:contentPaddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/payment_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/soft_black"
            android:textSize="32sp"
            tools:ignore="UnusedAttribute"
            tools:text="nonton Bareng Kungfu Panda 3" />

        <TextView
            android:id="@+id/bucket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textColor="@color/medium_dark"
            android:fontFamily="sans-serif-light"
            tools:text="Dana terkumpul\nRp 150.000, 00"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/medium_dark"
            tools:text="Total biaya\nRp 150.000, 00" />

        <LinearLayout
            android:id="@+id/action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="17dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/button_tranfer"
                android:layout_width="232dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_transfer"
                android:clickable="true"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/button_transfer"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
