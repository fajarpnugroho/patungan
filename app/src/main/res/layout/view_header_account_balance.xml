<?xml version="1.0" encoding="utf-8"?>
<com.chefcode.android.patungan.ui.list.HeaderViewComponent xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="35dp"
        android:fontFamily="sans-serif-condensed-light"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        tools:ignore="UnusedAttribute"
        tools:text="082143207721" />

    <TextView
        android:id="@+id/text_account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:ignore="UnusedAttribute"
        tools:text="Rp 5.000.000,00" />

    <ProgressBar
        android:id="@+id/view_loading"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:indeterminate="true"/>

</com.chefcode.android.patungan.ui.list.HeaderViewComponent>