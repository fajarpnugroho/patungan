<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ListItemText">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="HeaderText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LoginCreateText">
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">0dp</item>
    </style>

    <style name="LoginCreateTextButton">
        <item name="android:textSize">@dimen/login_buttons_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="FAB">
        <item name="android:layout_margin">0dp</item>
        <item name="fabSize">normal</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>

    <style name="OwnerPaymentGroup">
        <item name="android:textSize">@dimen/title_payment_group_name</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaymentGroupCreatedDate">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="ContactName">
        <item name="android:textSize">@dimen/title_payment_group_name</item>
        <item name="android:textColor">@color/black_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContactNumber">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/soft_black</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="PriceNumber">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/thin_black</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="InvitedMemberPhone">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/soft_black</item>
    </style>

    <style name="TransferInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="HightlightText">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="AuthorText">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DateText">
        <item name="android:textColor">@color/thin_black</item>
    </style>
</resources>
